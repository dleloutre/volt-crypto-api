{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2015",
    "rootDir": "src",
    "outDir": "target",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@shared": ["shared"],
      "@shared/*": ["shared/*"],
      "@application": ["application"],
      "@application/*": ["application/*"],
      "@domain": ["domain"],
      "@domain/*": ["domain/*"],
      "@infra": ["infra"],
      "@infra/*": ["infra/*"],
      "@config": ["config"],
      "@config/*": ["config/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
}