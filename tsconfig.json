{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "module": "CommonJS",
    "target": "ES2015",
    "rootDir": "src",
    "outDir": "target",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@shared": ["shared"],
      "@shared/*": ["shared/*"],
      "@application": ["application"],
      "@application/*": ["application/*"],
      "@domain": ["domain"],
      "@domain/*": ["domain/*"],
      "@db": ["db"],
      "@db/*": ["db/*"],
      "@config": ["config"],
      "@config/*": ["config/*"],
      "@repositories": ["repositories"],
      "@repositories/*": ["repositories/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules","target"]
}